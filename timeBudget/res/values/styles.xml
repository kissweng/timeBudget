<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="main_money">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">100.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6.0dip</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="main_money_label">
        <item name="android:textColor">#ff7e430b</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:layout_width">80.0dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_money_label_hdpi" parent="@style/main_money_label">
        <item name="android:paddingLeft">15.0px</item>
        <item name="android:layout_width">120.0px</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="main_money_hdpi" parent="@style/main_money">
        <item name="android:layout_width">150.0px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20.0px</item>
    </style>

    <style name="main_budget_lable">
        <item name="android:textColor">#ffa22815</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40.0dip</item>
    </style>

    <style name="main_budget_lable_hdpi" parent="@style/main_budget_lable">
        <item name="android:layout_height">60.0px</item>
    </style>

</resources>